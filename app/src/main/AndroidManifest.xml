<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.recipefrommyfridgeapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeFromMyFridgeApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.recipe.RecipeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.MyAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.recipe.SavedRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cuisine.CuisineActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ingredient.ChooseIngredientActivity"
            android:exported="false" />
        <activity
            android:name=".ui.recipe.ChooseRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>