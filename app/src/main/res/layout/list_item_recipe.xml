<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    tools:context="com.example.recipefrommyfridgeapp.ui.recipe.ChooseRecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/recipe_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Content"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/recipe_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Rating"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/recipe_cuisineId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Cuisine Id"
            android:textAlignment="center"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>